{
	"name": "musetric-desktop-app",
	"description": "Musetric desktop application",
	"version": "0.0.1",
	"license": "MIT",
	"main": "./dist/main.js",
	"homepage": "https://github.com/popelenkow/Musetric",
	"bugs": "https://github.com/popelenkow/Musetric/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/popelenkow/Musetric",
		"directory": "musetric"
	},
	"keywords": [
		"musetric",
		"react",
		"electron"
	],
	"author": {
		"name": "Musetric",
		"email": "musetric@musetric.musetric",
		"url": "https://github.com/popelenkow/Musetric"
	},
	"scripts": {
		"postinstall": "cpx node_modules/musetric/locales/**/*.* locales",
		"dev-renderer": "webpack-dev-server --progress --config ./configs/webpack.config.renderer.dev.js",
		"dev-main": "webpack --progress --config ./configs/webpack.config.main.dev.js && electron .",
		"dev": "cross-env WITH_MAIN=1 yarn dev-renderer",
		"build-renderer": "webpack --progress --config ./configs/webpack.config.renderer.prod.js",
		"build-main": "webpack --progress --config ./configs/webpack.config.main.prod.js",
		"build": "rimraf {dist, build} && yarn build-renderer && yarn build-main && electron-builder"
	},
	"build": {
		"appId": "musetric.app",
		"productName": "Musetric",
		"files": [
			"./dist/**/*"
		],
		"directories": {
			"output": "build"
		},
		"win": {
			"target": [
				"nsis"
			],
			"icon": "./resources/icon.ico"
		},
		"nsis": {
			"allowToChangeInstallationDirectory": true,
			"oneClick": false
		},
		"extraFiles": [
			"icon.ico",
			"app.config.json",
			"locale",
			"background"
		]
	},
	"dependencies": {
		"musetric": "0.0.1-dev.16"
	},
	"devDependencies": {
		"@types/classnames": "2.2.10",
		"@types/dom-mediacapture-record": "1.0.7",
		"@types/react": "16.9.44",
		"@types/react-dom": "16.9.8",
		"cpx": "1.5.0",
		"cross-env": "7.0.2",
		"css-loader": "4.2.0",
		"electron": "9.1.2",
		"electron-builder": "22.8.0",
		"html-webpack-plugin": "4.3.0",
		"i18next": "19.6.3",
		"immer": "7.0.7",
		"inline-worker": "1.1.0",
		"mini-css-extract-plugin": "0.9.0",
		"python-shell": "2.0.1",
		"react": "16.13.1",
		"react-dom": "16.13.1",
		"react-i18next": "11.7.0",
		"sass": "1.26.10",
		"sass-loader": "9.0.3",
		"ts-loader": "8.0.2",
		"typescript": "3.9.7",
		"webpack": "4.44.1",
		"webpack-cli": "3.3.12",
		"webpack-dev-server": "3.11.0",
		"webpack-merge": "5.1.1"
	}
}
