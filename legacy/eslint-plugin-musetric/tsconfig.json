{
    "extends": "./tsconfig.base",
    "compilerOptions": {
        /* Basic Options */
        "declaration": true, /* Generates corresponding '.d.ts' file. */
        "outDir": "./dist", /* Redirect output structure to the directory. */
        "rootDir": "./src",
        "module": "Node16",
        "moduleResolution": "Node16",
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ],
}