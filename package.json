{
  "name": "@musetric/monorepo",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.9.3",
  "engines": {
    "node": "24.7.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach --all --parallel --interlaced run dev",
    "dev:stop": "yarn workspaces foreach --all --parallel --interlaced run dev:stop",
    "build:frontend": "yarn workspace @musetric/frontend build && yarn ncp packages/frontend/dist packages/backend/public",
    "build:docker": "yarn workspace @musetric/backend build:docker",
    "start:docker": "yarn workspace @musetric/backend start:docker",
    "check:deps": "yarn constraints && yarn dedupe --check",
    "check:deps:fix": "yarn constraints --fix && yarn && yarn dedupe",
    "check:ts": "yarn workspaces foreach --all --topological run check:ts",
    "check:lint": "yarn workspaces foreach --all --topological run check:lint",
    "check:lint:fix": "yarn workspaces foreach --all --topological run check:lint:fix",
    "check:translations": "yarn workspaces foreach --all --topological run check:translations",
    "check:translations:fix": "yarn workspaces foreach --all --topological run check:translations:fix",
    "check:format": "prettier --check .",
    "check:format:fix": "prettier . --write",
    "test": "yarn workspaces foreach --all --topological run test"
  },
  "devDependencies": {
    "grep-cli": "0.2.1",
    "ncp": "2.0.0",
    "prettier": "3.6.2"
  }
}
