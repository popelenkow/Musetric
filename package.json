{
  "name": "@musetric/monorepo",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.9.3",
  "engines": {
    "node": "24.7.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:start": "yarn workspaces foreach --all --parallel --interlaced run dev:start",
    "dev:stop": "yarn workspaces foreach --all --parallel --interlaced run dev:stop",
    "project:build": "yarn workspaces foreach --all --parallel --interlaced run project:build",
    "project:init": "yarn workspaces foreach --all --parallel --interlaced run project:init",
    "project:start": "yarn workspaces foreach --all --parallel --interlaced run project:start",
    "docker:build:cpu": "yarn workspace @musetric/backend docker:build:cpu",
    "docker:build:cuda": "yarn workspace @musetric/backend docker:build:cuda",
    "docker:start:cpu": "yarn workspace @musetric/backend docker:start:cpu",
    "docker:start:cuda": "yarn workspace @musetric/backend docker:start:cuda",
    "check:deps": "yarn constraints && yarn dedupe --check",
    "check:deps:fix": "yarn constraints --fix && yarn && yarn dedupe",
    "check:ts": "yarn workspaces foreach --all --parallel --interlaced run check:ts",
    "check:lint": "yarn workspaces foreach --all --parallel --interlaced run check:lint",
    "check:lint:fix": "yarn workspaces foreach --all --parallel --interlaced run check:lint:fix",
    "check:translations": "yarn workspaces foreach --all --parallel --interlaced run check:translations",
    "check:translations:fix": "yarn workspaces foreach --all --parallel --interlaced run check:translations:fix",
    "check:format": "prettier --check .",
    "check:format:fix": "prettier . --write",
    "test": "yarn workspaces foreach --all --parallel --interlaced run test"
  },
  "devDependencies": {
    "grep-cli": "0.2.1",
    "ncp": "2.0.0",
    "prettier": "3.6.2"
  }
}
