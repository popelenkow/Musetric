{
  "name": "@musetric/backend",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "postinstall": "node --import tsx ./scripts/install.ts",
    "dev": "node --import tsx --watch src/index.ts -- musetric-backend",
    "dev:stop": "kill-process musetric-backend",
    "build:docker": "docker build --progress=plain --file Dockerfile -t musetric ../..",
    "start:docker": "docker compose up -d",
    "check:ts": "tsc --noEmit",
    "check:lint": "eslint . --cache",
    "check:lint:fix": "eslint . --fix --cache"
  },
  "devDependencies": {
    "@fastify/multipart": "9.0.3",
    "@fastify/static": "8.2.0",
    "@fastify/swagger": "9.5.1",
    "@fastify/swagger-ui": "5.2.3",
    "@musetric/api": "workspace:*",
    "@musetric/backend-db": "workspace:*",
    "@musetric/eslint-config": "workspace:*",
    "@musetric/kill-process": "workspace:*",
    "@musetric/resource-utils": "workspace:*",
    "@types/node": "24.2.1",
    "axios": "1.12.2",
    "eslint": "9.36.0",
    "fastify": "5.4.0",
    "fastify-type-provider-zod": "6.0.0",
    "openapi-types": "12.1.3",
    "pino-pretty": "13.1.1",
    "selfsigned": "3.0.1",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "zod": "4.1.9"
  }
}
