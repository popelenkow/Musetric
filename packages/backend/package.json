{
  "name": "@musetric/backend",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev:start": "yarn project:init && node --import tsx --conditions=monorepo --watch src/index.ts -- musetric-backend",
    "dev:stop": "kill-process musetric-backend",
    "project:build": "tsc --project tsconfig.build.json",
    "project:init": "node --import tsx --conditions=monorepo ./scripts/init.js",
    "project:start": "node dist/index.js",
    "docker:build": "docker build --progress=plain -f Dockerfile.runtime -t musetric-runtime ../.. && docker build --progress=plain -f Dockerfile -t musetric ../..",
    "docker:start": "docker compose up -d",
    "check:ts": "tsc --noEmit",
    "check:lint": "eslint . --cache",
    "check:lint:fix": "eslint . --fix --cache"
  },
  "dependencies": {
    "@fastify/multipart": "9.0.3",
    "@fastify/static": "8.2.0",
    "@fastify/swagger": "9.5.1",
    "@fastify/swagger-ui": "5.2.3",
    "@musetric/api": "workspace:*",
    "@musetric/backend-db": "workspace:*",
    "@musetric/backend-workers": "workspace:*",
    "@musetric/resource-utils": "workspace:*",
    "fastify": "5.4.0",
    "fastify-type-provider-zod": "6.0.0",
    "openapi-types": "12.1.3",
    "pino-pretty": "13.1.1",
    "selfsigned": "3.0.1",
    "zod": "4.1.9"
  },
  "devDependencies": {
    "@musetric/eslint-config": "workspace:*",
    "@musetric/kill-process": "workspace:*",
    "@types/node": "24.2.1",
    "eslint": "9.36.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  }
}
