{
  "name": "@musetric/audio-view",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "monorepo": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "postinstall": "node --conditions=monorepo ./scripts/install.ts",
    "project:build": "cpx \"src/**/*.wgsl\" dist --clean && tsc --project tsconfig.build.json",
    "check:ts": "tsc --noEmit",
    "check:lint": "eslint . --cache",
    "check:lint:fix": "eslint . --fix --cache",
    "test": "vitest run"
  },
  "devDependencies": {
    "@musetric/eslint-config": "workspace:*",
    "@musetric/resource-utils": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/browser": "catalog:",
    "@vitest/browser-playwright": "catalog:",
    "@webgpu/types": "catalog:",
    "cpx2": "catalog:",
    "eslint": "catalog:",
    "playwright": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
