{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],
    "module": "node20",
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "composite": true,
    "incremental": true,
    "customConditions": ["monorepo"]
  },
  "exclude": ["node_modules", "**/dist", ".venv", "**/backend/storage"]
}
